<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.video.FragmentVideo1">

    <LinearLayout
        android:id="@+id/layout_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F3F3"
        android:orientation="horizontal">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:text="KD 3.2"
            android:textAlignment="center"
            app:chipStrokeColor="@color/chip_border"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:text="KD 3.2"
            android:textAlignment="center"
            app:chipStrokeColor="@color/chip_border"
            android:backgroundTint="@color/chip_selected"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:text="KD 3.4"
            android:textAlignment="center"
            app:chipStrokeColor="@color/chip_border"
            app:chipStrokeWidth="2dp" />

    </LinearLayout>

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_upper"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/vid7"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:id="@+id/vid_tmb1"
                        android:layout_width="152dp"
                        android:layout_height="152dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xd_prop2" />

                    <TextView
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingHorizontal="10dp"
                        android:text="Komponen Komputer dan Spesifikasi PC"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:clickable="false"
                    android:visibility="invisible"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:id="@+id/vid_tmb2"
                        android:layout_width="152dp"
                        android:layout_height="152dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/xd_thumbnail" />

                    <TextView
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingHorizontal="10dp"
                        android:text="Alat dan Bahan Merakit Komputer"
                        android:textColor="@color/white" />

                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</RelativeLayout>