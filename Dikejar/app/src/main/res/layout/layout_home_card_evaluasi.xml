<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="20dp"
        android:id="@+id/card_test_rakit_komputer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/img_test_rakit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/btn_test_rakit"
                android:fontFamily="@font/poppins_bold"
                android:scaleType="fitXY"
                android:src="@drawable/xd_eval_perakitan"
                android:textColor="@color/color_title" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_test_rakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:fontFamily="@font/poppins_regular"
                android:paddingHorizontal="4dp"
                android:text="Mulai"
                app:cornerRadius="20dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_marginBottom="20dp"
        android:id="@+id/card_test_uji_kinerja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/img_test_uji_kinerja"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/btn_test_uji_kinerja"
                android:fontFamily="@font/poppins_bold"
                android:scaleType="fitXY"
                android:src="@drawable/xd_eval_uji_kinerja"
                android:textColor="@color/color_title" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_test_uji_kinerja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:fontFamily="@font/poppins_regular"
                android:paddingHorizontal="4dp"
                android:text="Mulai"
                app:cornerRadius="20dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_marginBottom="20dp"
        android:id="@+id/card_test_uji_konfigurasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/img_test_uji_konfigurasi"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/btn_test_uji_konfigurasi"
                android:fontFamily="@font/poppins_bold"
                android:scaleType="fitXY"
                android:src="@drawable/xd_eval_bios"
                android:textColor="@color/color_title" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_test_uji_konfigurasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:fontFamily="@font/poppins_regular"
                android:paddingHorizontal="4dp"
                android:text="Mulai"
                app:cornerRadius="20dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

