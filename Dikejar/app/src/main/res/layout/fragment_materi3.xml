<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.video.FragmentVideo1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="-90dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_ellipse_eval" />

    <LinearLayout
        android:id="@+id/layout_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="DIKEJAR"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Menjadi Pintar Komputer dan Jaringan Dasar"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_upper"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/card_pendahuluan"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:id="@+id/pendahuluan"
                        android:layout_width="152dp"
                        android:layout_height="152dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/materi_3_1" />

                    <TextView
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pendahuluan"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_rounded_bottom_15"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingHorizontal="10dp"
                        android:paddingBottom="10dp"
                        android:text="Pendahuluan"
                        android:textAllCaps="true"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card_materi1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <RelativeLayout
                        android:id="@+id/materi1"
                        android:layout_width="152dp"
                        android:layout_height="152dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/materi_3_2" />

                        <ImageView
                            android:id="@+id/gembok1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/xd_gembok" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/materi1"
                        android:background="@drawable/ic_rounded_bottom_15"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingHorizontal="10dp"
                        android:paddingBottom="10dp"
                        android:text="Konfigurasi BIOS pada Komputer"
                        android:textColor="@color/black"
                        android:textSize="13sp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/card_materi2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <RelativeLayout
                        android:id="@+id/materi2"
                        android:layout_width="152dp"
                        android:layout_height="152dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/materi_3_3" />

                        <ImageView
                            android:id="@+id/gembok2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/xd_gembok" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/materi2"
                        android:background="@drawable/ic_rounded_bottom_15"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingHorizontal="10dp"
                        android:paddingBottom="10dp"
                        android:text="Setting BIOS"
                        android:textColor="@color/black"
                        android:textSize="13sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:visibility="invisible"
                    android:id="@+id/card_materi3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <RelativeLayout
                        android:id="@+id/materi3"
                        android:layout_width="152dp"
                        android:layout_height="152dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/materi_2_3" />

                        <ImageView
                            android:id="@+id/gembok3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/xd_gembok" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/materi3"
                        android:background="@drawable/ic_rounded_bottom_15"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingHorizontal="10dp"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:text="Pengecekan Perangkat Input, Proses, Output, dan Media Penyimpanan pada BIOS"
                        android:textColor="@color/black"
                        android:textSize="10sp" />


                </RelativeLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/final_exam"
                android:layout_margin="20dp"
                app:cornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evaluasi Akhir"/>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>