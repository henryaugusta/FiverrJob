<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.pendahuluan.Pendahuluan1Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/xd_list_vid"/>

        <TextView
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_alignParentEnd="true"
            android:text="Belajar Cepat dengan\nMateri Ringkas"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:text="Perakitan Komputer"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/ic_rounded_top_15"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="-15dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:fontFamily="@font/poppins_bold"
                android:text=""/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_video1"
                android:layout_marginTop="-40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="2"
                tools:listitem="@layout/item_list_video"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:text="Menguji Kinerja Komputer"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_video2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="2"
                tools:listitem="@layout/item_list_video"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:text="Konfigurasi dan Setting BIOS"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_video3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="2"
                tools:listitem="@layout/item_list_video"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>